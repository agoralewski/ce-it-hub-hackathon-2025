# Environment variables for KSP (Krwinkowy System Prezentowy)

# Django settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1
NETWORK_HOST=0.0.0.0 # change to your server's IP address

# Database settings
DB_NAME=ksp_db
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432

# Email settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USE_TLS=False
EMAIL_USE_SSL=True
EMAIL_HOST_USER=krwinkafundacja@gmail.com
EMAIL_HOST_PASSWORD="test password"
DEFAULT_FROM_EMAIL=krwinkafundacja@gmail.com
SITE_DOMAIN=$NETWORK_HOST:80
# Comma-separated list of email recipients for expiry notifications
EXPIRY_NOTIFICATION_EMAILS=krwinkafundacja@gmail.com,another_recipient@example.com
# Time to send daily notifications (24-hour format)
NOTIFICATION_HOUR=8
NOTIFICATION_MINUTE=0
# Enable or disable automatic expiry notifications
ENABLE_EXPIRY_NOTIFICATIONS=True
